{% extends "@FOSUser/userLayout.html.twig" %}

{% block userContent %}

        <div class="fioDiv">
            <h4>{{ "account_menu.loginInfo"|trans }}</h4>
            <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
                <div class="form-group">
                    <label for="login">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                    <input type="text" name="login" value="{{ user.username }}" disabled class="form-control goldInput input-lg">
                </div>
                <div class="form-group">
                    <label for="current">{{ "account_menu.current_pass"|trans}}</label>
                    {{ form_widget(form.current_password,{ 'attr' : {'class' : 'form-control goldInput input-lg'} }) }}
                </div>
                <div class="form-group">
                    <label for="current">{{ "account_menu.new_pass"|trans}}</label>
                    {{ form_widget(form.new.first,{ 'attr' : {'class' : 'form-control goldInput input-lg'} }) }}
                </div>
                <div class="form-group">
                    <label for="current">{{ "account_menu.new_pass_confirm"|trans}}</label>
                    {{ form_widget(form.new.second,{ 'attr' : {'class' : 'form-control goldInput input-lg'} }) }}
                </div>
                {{ form_rest(form) }}
                <button type="submit" class="btn btn-gold btn-lg w100">{{ "account_menu.change"|trans }}</button>
            </form>
        </div>

{% endblock %}
