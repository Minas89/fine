<div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
        <div class="text-center">
            <h2 class="module-header">
                {{ "user.register"|trans }}
            </h2>
        </div>
        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="registerForm" role="form" novalidate>
            <div class="form-group">
                {{ form_row(form.title,{'attr' : { 'class' : 'form-control input-lg goldInput' }}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.firstname,{'attr' : { 'class' : 'form-control input-lg goldInput' }}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.lastname,{'attr' : { 'class' : 'form-control input-lg goldInput' }}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.username,{'attr' : { 'class' : 'form-control input-lg goldInput' }}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.email,{'attr' : { 'class' : 'form-control input-lg goldInput' }}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.plainPassword.first,{'attr' : { 'class' : 'form-control input-lg goldInput' }}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.plainPassword.second,{'attr' : { 'class' : 'form-control input-lg goldInput' }}) }}
            </div>


            {{ form_rest(form) }}
            <div>
                <button type="submit" class="btn btn-gold w100 btn-lg">{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</button>
            </div>
        </form>
    </div>
</div>


