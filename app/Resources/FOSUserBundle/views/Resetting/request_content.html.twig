{% if invalid_username is defined %}
    {% set hasError = 'has-error' %}
{% else %}
    {% set hasError = '' %}
{% endif %}
<div class="row pt20">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request registerForm" novalidate>
            <div class="form-group {{ hasError }} has-feedback">
                <p>Please enter the email address on your FINEARTER account and we'll email you a link to reset your password</p>
                <label for="username">Email <span class="mandatory">*</span></label>
                <input type="text" id="username" name="username" required="required" class="form-control goldInput input-lg" />
                {% if invalid_username is defined %}
                <div class="errorDiv pl0">
                    <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</p>
                </div>
                {% endif %}
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-gold-white w100 btn-lg">SEND</button>
                <div class="mt15">
                    Don't have an account? <a class="text-gold" href="{{ path('fos_user_registration_register') }}">Sign up</a>
                </div>
                <hr class="myHR w100"/>
                <div class="col-xs-12 p0">
                    <a href="{{ path('fos_user_security_login') }}" class="text-black uppercase">
                        <i class="fa fa-angle-left fa-2x pull-left"></i>
                        <span style="font-size: 16px;display: block; margin-top: 6px;">Back</span>
                    </a>
                </div>

            </div>
        </form>
    </div>
</div>

