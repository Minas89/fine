{% extends "AppBundle::layout.html.twig" %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('owl_carousel/assets/owl.carousel.css') }}" type="text/css">
{% endblock %}

{% block javascriptsBottom %}
    {{ parent() }}
    <script src="{{ asset('owl_carousel/owl.carousel.js') }}"></script>
    <script>
        $('.topOwl').owlCarousel({
            loop:true,
            margin:10,
            nav:false,
            autoplay: true,
            responsive:{
                0:{
                    items:1
                },
                600:{
                    items:3
                },
                1000:{
                    items:4
                }
            }
        });

        $('.shopBy').owlCarousel({
            loop:true,
            margin:10,
            nav:false,
            autoplay: true,
            responsive:{
                0:{
                    items:1
                },
                600:{
                    items:3
                },
                1000:{
                    items:4
                }
            }
        });

        $('.newArrivals').owlCarousel({
            loop:true,
            margin:10,
            nav:false,
            autoplay: true,
            responsive:{
                0:{
                    items:1
                },
                600:{
                    items:1
                },
                1000:{
                    items:1
                }
            }
        })
    </script>

    <script>
        $(document).ready(function(){
            $(".owl-controls").css("display","inline_block");
        })
    </script>
{% endblock %}

{% block content %}

    {{ render(controller('AppBundle:Products:topCarousel')) }}
    {#  BIG Banner #}
    {{ render(controller('AppBundle:Banners:bigBanner')) }}
    {#  BIG Banner #}
    <div class="row">
        <div class="col-xs-12">
            <div class="purple"></div>
            <div class="gold"></div>
        </div>
    </div>
    {{ render(controller('AppBundle:Products:newArrivals')) }}

    {{ render(controller('AppBundle:Categories:shopByCategory')) }}

    <div class="row">
        <div class="col-xs-12">
            <div class="purple"></div>
            <div class="gold"></div>
        </div>
    </div>
{% endblock %}