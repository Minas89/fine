{% set locale = app.request.get("_locale") %}
<div id="filtersDiv pl30">
    <div class="filterHeader">
        <p class="uppercase mb30">Filter within 0 results</p>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="ccc"></div>
        </div>
    </div>
    <div class="accordionFilter row">
        <div class="col-xs-12">
            {% if app.request.get('minPrice') or app.request.get('maxPrice') %}
                {% set prF = true %}
            {% endif %}
            {% if app.request.get('minWidth') or app.request.get('maxWidth') or app.request.get('minHeight') or app.request.get('maxHeight') %}
                {% set dimF = true %}
            {% endif %}

            <div class="accordion-container">
                <a href="#" class="accordion-toggle filterLabel">{{ "filters.price"|trans|upper }}
                    <span class="pull-right arrow">
                    <i class="fa fa-angle-right fa-2x"></i>
                </span>
                </a>
                <div class="accordion-content" {% if prF is defined %}style="display: block;" {% else %}style="display: none;"{% endif %}>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="minPrice">from</label>
                                <input type="number" class="form-control goldInput" name="minPrice" id="minPrice"
                                  placeholder="min price" value="{{ app.request.get('minPrice') }}">
                            </div>
                            <div class="form-group">
                                <label for="maxPrice">to</label>
                                <input type="number" class="form-control goldInput" name="maxPrice" id="maxPrice"
                                       placeholder="max price" value="{{ app.request.get('maxPrice') }}">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="accordion-container">
                <a href="#" class="accordion-toggle filterLabel">{{ "filters.dimensions"|trans|upper }}
                    <span class="pull-right arrow">
                        <i class="fa fa-angle-right fa-2x"></i>
                    </span>
                </a>
                <div class="accordion-content" {% if dimF is defined %}style="display: block;" {% else %}style="display: none;"{% endif %}>
                    <div class="row">
                        <div class="col-xs-12">
                            <form action="">
                                <div class="form-group">
                                    <h5>{{ "filters.width"|trans|upper }}</h5>
                                    <input type="number" name="widthMin" class="goldInput form-control"
                                           style="width: 43%; float: left" placeholder="min" id="minWidth" value="{{ app.request.get('minWidth') }}">
                                    <div style="float: left; margin-left: 10px;margin-right: 10px; margin-top: 5px;">to</div>
                                    <input type="number" name="widthMax" class="goldInput form-control"
                                           style="width: 43%; float: left" placeholder="max" id="maxWidth" value="{{ app.request.get('maxWidth') }}">
                                     <br><br>
                                    <h5>{{ "filters.height"|trans|upper }}</h5>
                                    <input type="number" name="minHeight" class="goldInput form-control"
                                           style="width: 43%; float: left" placeholder="min" id="minHeight" value="{{ app.request.get('minHeight') }}">
                                    <div style="float: left; margin-left: 10px;margin-right: 10px; margin-top: 5px;">to</div>
                                    <input type="number" name="maxHeight" class="goldInput form-control"
                                           style="width: 43%; float: left" placeholder="max" id="maxHeight" value="{{ app.request.get('maxHeight') }}">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {% if colors is defined %}
                <div class="accordion-container">
                    <a href="#" class="accordion-toggle filterLabel">{{ "filters.color"|trans|upper }}
                        <span class="pull-right arrow">
                        <i class="fa fa-angle-right fa-2x"></i>
                    </span>
                    </a>
                    <div class="accordion-content" style="display: none;">
                        <div class="row">
                            <div class="col-xs-12">
                                {% for color in colors %}
                                    {% if locale == 'en' %}
                                        <a href="javascript:void(0)" id="color{{ color.titleEng }}" title="{{ color.titleEng }}" class="oneColor"
                                           style="background-color: {{ color.color }};" onclick="addColorFilter('{{ color.titleEng }}')"></a>
                                    {% endif %}
                                    {% if locale == 'ru' %}
                                        <a href="javascript:void(0)" id="color{{ color.titleRus }}" title="{{ color.titleRus }}" class="oneColor"
                                           style="background-color: {{ color.color }};" onclick="addColorFilter('{{ color.titleEng }}')"></a>
                                    {% endif %}
                                    {% if locale == 'am' %}
                                        <a href="javascript:void(0)" id="color{{ color.titleArm }}" title="{{ color.titleArm }}" class="oneColor"
                                           style="background-color: {{ color.color }};" onclick="addColorFilter('{{ color.titleEng }}')"></a>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
            <div class="form-group">
                <button type="button" class="filter_button btn btn-gold-white w100">Search by filter</button>
            </div>
        </div>
    </div>
</div>
