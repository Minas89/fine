{% set locale = app.request.get("_locale") %}
<div id="filtersDiv" class="pl30">
    <div class="filterHeader">
        <p class="uppercase mb30">Filter within {{ products|length }} results</p>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="ccc"></div>
        </div>
    </div>
    <div class="accordionFilter row">
        <div class="col-xs-12">

            {% if categories|length > 0 %}
                <div class="accordion-container">
                    <a href="#" class="accordion-toggle filterLabel">{{ "filters.category"|trans|upper }}
                        <span class="pull-right arrow">
                            <i class="fa fa-angle-up fa-2x"></i>
                        </span>
                    </a>
                    <div class="accordion-content">
                        {% for categoryObj in categories %}
                            <p>
                                <a href="#" class="text-black">
                                    {{ categoryObj.titleEng }}
                                </a>
                            </p>
                        {% endfor %}

                    </div>
                </div>

            {% endif %}

            <div class="accordion-container">
                <a href="#" class="accordion-toggle filterLabel">{{ "filters.price"|trans|upper }}
                    <span class="pull-right arrow">
                            <i class="fa fa-angle-up fa-2x"></i>
                        </span>
                </a>
                <div class="accordion-content row mx0">
                    <div class="col-md-4 pl0">
                        <input type="text" class="form-control goldInput input-lg" placeholder="{{ currency }} min">
                    </div>
                    <div class="col-md-1 p0 text-center mt15">
                        to
                    </div>
                    <div class="col-md-4 pr0">
                        <input type="text" class="form-control goldInput input-lg" placeholder="{{ currency }} max">
                    </div>
                    <div class="col-md-3 pr0 text-right">
                        <a href="#">
                            <button class="btn btn-gold-white">
                                <i class="fa fa-angle-right fa-2x"></i>
                            </button>
                        </a>
                    </div>
                    <div class="col-xs-12 p0">
                        <hr class="myHR w100">
                        <label>
                            <input type="checkbox" name="onSale" id="onSale">
                            ON SALE
                        </label>
                    </div>

                </div>
            </div>

            <div class="accordion-container">
                <a href="#" class="accordion-toggle filterLabel">{{ "filters.dimensions"|trans|upper }}
                    <span class="pull-right arrow">
                            <i class="fa fa-angle-up fa-2x"></i>
                        </span>
                </a>
                <div class="accordion-content">
                    <div class="row mx0">
                        <div class="col-xs-12 pl0 mb-1">
                            HEIGHT
                        </div>
                        <div class="col-md-4 pl0">
                            <input type="text" class="form-control goldInput input-lg" placeholder="cm">
                        </div>
                        <div class="col-md-1 p0 text-center mt15">
                            to
                        </div>
                        <div class="col-md-4 pr0">
                            <input type="text" class="form-control goldInput input-lg" placeholder="cm">
                        </div>
                        <div class="col-md-3 pr0 text-right">
                            <a href="#">
                                <button class="btn btn-gold-white">
                                    <i class="fa fa-angle-right fa-2x"></i>
                                </button>
                            </a>
                        </div>
                    </div>
                    <div class="row mx0 mt-3">
                        <div class="col-xs-12 pl0 mb-1">
                            WIDTH
                        </div>
                        <div class="col-md-4 pl0">
                            <input type="text" class="form-control goldInput input-lg" placeholder="cm">
                        </div>
                        <div class="col-md-1 p0 text-center mt15">
                            to
                        </div>
                        <div class="col-md-4 pr0">
                            <input type="text" class="form-control goldInput input-lg" placeholder="cm">
                        </div>
                        <div class="col-md-3 pr0 text-right">
                            <a href="#">
                                <button class="btn btn-gold-white">
                                    <i class="fa fa-angle-right fa-2x"></i>
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>


            {% if colors is defined %}
                <div class="accordion-container">
                    <a href="#" class="accordion-toggle filterLabel">{{ "filters.color"|trans|upper }}
                        <span class="pull-right arrow">
                        <i class="fa fa-angle-up fa-2x"></i>
                    </span>
                    </a>
                    <div class="accordion-content">
                        <div class="row">
                            <div class="col-xs-12">
                                {% for color in colors %}
                                    {% if locale == 'en' %}
                                        <a href="javascript:void(0)" id="color{{ color.titleEng }}" title="{{ color.titleEng }}" class="oneColor"
                                           style="background-color: {{ color.color }};" onclick="addColorFilter('{{ color.titleEng }}')"></a>
                                    {% endif %}
                                    {% if locale == 'ru' %}
                                        <a href="javascript:void(0)" id="color{{ color.id }}" title="{{ color.titleRus }}" class="oneColor"
                                           style="background-color: {{ color.color }};" onclick="addColorFilter('{{ color.titleEng }}')"></a>
                                    {% endif %}
                                    {% if locale == 'am' %}
                                        <a href="javascript:void(0)" id="color{{ color.id }}" title="{{ color.titleArm }}" class="oneColor"
                                           style="background-color: {{ color.color }};" onclick="addColorFilter('{{ color.titleEng }}')"></a>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}

            {% if creators is defined and creators|length > 0 %}
                <div class="accordion-container">
                    <a href="#" class="accordion-toggle filterLabel">CREATORS
                        <span class="pull-right arrow">
                        <i class="fa fa-angle-up fa-2x"></i>
                    </span>
                    </a>
                    <div class="accordion-content">
                        <div class="row">
                            <div class="col-xs-12">
                                {% for creator in creators  %}
                                    <p class="mb0">
                                        <label class="control-label">
                                            {#  {% if filterGenders is defined and genderObj.id in filterGenders|keys  %}
                                                  <input type="checkbox" name="genders" data-id="{{ genderObj.id }}" data-locale="{{ locale }}" value="{{ genderObj.id }}" class="addFilterValue" checked /><i></i>
                                              {% else %}#}
                                            <input type="checkbox" name="creators" data-id="{{ creator.id }}" value="{{ creator.id }}" class="addFilterValue"/>
                                            {# {% endif %}#}
                                            {% if locale == "en" %}
                                                {{ creator.titleEng }}
                                            {% elseif locale == "am" %}
                                                {{ creator.titleArm }}
                                            {% endif %}
                                            {# ({{ gender.count }})#}
                                        </label>
                                    </p>

                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
            {% if styles is defined and styles|length > 0 %}
                <div class="accordion-container">
                    <a href="#" class="accordion-toggle filterLabel">STYLES
                        <span class="pull-right arrow">
                        <i class="fa fa-angle-up fa-2x"></i>
                    </span>
                    </a>
                    <div class="accordion-content">
                        <div class="row">
                            <div class="col-xs-12">
                                {% for style in styles  %}

                                    <p class="mb0">
                                        <label class="control-label">
                                            {#  {% if filterGenders is defined and genderObj.id in filterGenders|keys  %}
                                                  <input type="checkbox" name="genders" data-id="{{ genderObj.id }}" data-locale="{{ locale }}" value="{{ genderObj.id }}" class="addFilterValue" checked /><i></i>
                                              {% else %}#}
                                            <input type="checkbox" name="creators" data-id="{{ style.id }}" value="{{ style.id }}" class="addFilterValue"/>
                                            {# {% endif %}#}
                                            {% if locale == "en" %}
                                                {{ style.titleEng }}
                                            {% elseif locale == "am" %}
                                                {{ style.titleArm }}
                                            {% endif %}
                                            {# ({{ gender.count }})#}
                                        </label>
                                    </p>

                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
            {% if shippings is defined and shippings|length > 0 %}
                <div class="accordion-container">
                    <a href="#" class="accordion-toggle filterLabel">SHIPPING OPTIONS
                        <span class="pull-right arrow">
                        <i class="fa fa-angle-up fa-2x"></i>
                    </span>
                    </a>
                    <div class="accordion-content">
                        <div class="row">
                            <div class="col-xs-12">
                                {% for shipping in shippings  %}

                                    <p class="mb0">
                                        <label class="control-label">
                                            {#  {% if filterGenders is defined and genderObj.id in filterGenders|keys  %}
                                                  <input type="checkbox" name="genders" data-id="{{ genderObj.id }}" data-locale="{{ locale }}" value="{{ genderObj.id }}" class="addFilterValue" checked /><i></i>
                                              {% else %}#}
                                            <input type="checkbox" name="creators" data-id="{{ shipping.id }}" value="{{ shipping.id }}" class="addFilterValue"/>
                                            {# {% endif %}#}
                                            {% if locale == "en" %}
                                                {{ shipping.titleEng }}
                                            {% elseif locale == "am" %}
                                                {{ shipping.titleArm }}
                                            {% endif %}
                                            {# ({{ gender.count }})#}
                                        </label>
                                    </p>

                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
