                                                {% if locale == 'ru' %}
                                                    {{ product.titleRus }}
                                                {% endif %}
                                                {% if locale == 'am' %}
                                                    {{ product.titleArm }}
                                                {% endif %}
                                            </p>
                                        </a>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
