{% extends '@App/layout.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
{% endblock %}

{% block breadcrumbs %}
    {% set locale = app.request.get('_locale') %}
    <div class="row">

        <ol class="breadcrumb" id="myBreadcrumb">
            <li><a href="{{ path('app_homepage') }}">Home</a></li>
            <li class="active">
                <a href="{{ path('app_category', {'slug': category.slug}) }}">
                    {% if locale == 'en' %}
                        {{ category.titleEng }}
                    {% elseif locale == 'ru' %}
                        {{ category.titleRus }}
                    {% elseif locale == 'am' %}
                        {{ category.titleArm }}
                    {% endif %}
                </a>
            </li>
        </ol>

    </div>

{% endblock %}

{% block content %}
    {% set locale = app.request.get('_locale') %}
    {% if app.request.cookies.get('view') %}
        {% set view = app.request.cookies.get('view')  %}
    {% else %}
        {% set view = 'grid' %}
    {% endif %}
    {#{% set sort =  app.request.query.get("sort") %}#}
    <div class="row">
        <div class="col-xs-12">
            <h2 class="mainCat">
                {% if locale == 'en' %}
                    {{ category.titleEng }}
                {% elseif locale == 'ru' %}
                    {{ category.titleRus }}
                {% elseif locale == 'am' %}
                    {{ category.titleArm }}
                {% endif %}
            </h2>
            <div class="pull-right sorting">
                <form action="" method="get" class="pull-left" id="rightFilterForm">
                    <label for="sortProducts"><span class="sortBy">{{ "product.sortBy"|trans }}</span></label>
                    <select name="sort" id="sortProducts" onchange="this.form.submit() ">
                        <option value="newest" {% if sort == 'newest' %}selected{% endif %}>{{ "product.newest"|trans }}</option>
                        <option value="price-high" {% if sort == 'price-high' %}selected{% endif %}>{{ "product.priceHL"|trans }}</option>
                        <option value="price-low" {% if sort == 'price-low' %}selected{% endif %}>{{ "product.priceLH"|trans }}</option>
                    </select>
                </form>
                <ul id="gridView" class="pull-right">
                    <li {% if view == 'grid' %} class="active"{% endif %}>
                        <a href="javascript:void(0)" class="forIcons" onClick="SetCookie('view','grid','1')">
                            <i class="fa fa-th-large" aria-hidden="true"></i>
                        </a>
                    </li>
                    <li {% if view == 'list' %} class="active"{% endif %}>
                        <a href="javascript:void(0)" class="forIcons" onClick="SetCookie('view','list','1')">
                            <i class="fa fa-bars" aria-hidden="true"></i>
                        </a>
                    </li>
                </ul>


            </div>
        </div>

        <div class="col-sm-3 col-md-3">
            {% include "AppBundle:Filters:filters.html.twig" %}
        </div>
        <div class="col-sm-9 col-md-9">
            <div class="row">
                <div class="products">
                    {% for product in products  %}
                        {% if view == 'grid' %}
                            <div class="col-md-4">
                                <div class="oneProduct">
                                    <a href="{{ path('app_single_product', {'category': product.category.slug, 'slug': product.slug}) }}">
                                        <div class="divImg text-center">
                                            <img src="{% path product.image, 'big' %}" alt="Product">
                                        </div>

                                        <div class="product-title">
                                            <div class="product-name">
                                                {% if locale == 'en' %}
                                                    {{ product.creator.titleEng }}<br>
                                                    {{ product.titleEng }}
                                                {% elseif locale == 'ru' %}
                                                    {{ product.creator.titleRus }}<br>
                                                    {{ product.titleRus }}
                                                {% elseif locale == 'am' %}
                                                    {{ product.creator.titleArm }}<br>
                                                    {{ product.titleArm }}
                                                {% endif %}
                                            </div>
                                        </div>
                                    <span class="product-price">
                                        <span class="product-price-item">
                                            ${{ product.price }}
                                        </span>
                                    </span>

                                    </a>
                                </div>
                            </div>
                        {% elseif view == 'list' %}
                            <div class="col-md-12">
                                <div class="listOneProduct">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="divImg text-center">
                                                <img src="{% path product.image, 'big' %}" alt="Product">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="product-title-list">
                                                <div class="product-name">
                                                    {% if locale == 'en' %}
                                                        {{ product.creator.titleEng }}<br>
                                                        {{ product.titleEng }}
                                                    {% elseif locale == 'ru' %}
                                                        {{ product.creator.titleRus }}<br>
                                                        {{ product.titleRus }}
                                                    {% elseif locale == 'am' %}
                                                        {{ product.creator.titleArm }}<br>
                                                        {{ product.titleArm }}
                                                    {% endif %}
                                                </div>
                                            </div>
                                            {% if product.price is not null %}
                                                <span class="product-price">
                                                <span class="product-price-item">
                                                    ${{ product.price }}
                                                </span>
                                            </span>
                                            {% endif %}

                                        </div>
                                        <div class="col-md-4">
                                            <div class="buttons text-center">
                                                <a href="{{ path('app_single_product', {'category': product.category.slug, 'slug': product.slug}) }}"
                                                   class="btn btn-gold btn-lg mt15">{{ "product.viewDeatils"|trans|upper }}</a>
                                                {% if product.price is null %}
                                                    <a href="#" class="btn btn-gold-white btn-lg mt15">{{ "product.makeOffer"|trans|upper }}</a>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascriptsBottom %}
    {{ parent() }}
    <script>
        function SetCookie(c_name,value,expiredays)
        {
            var exdate=new Date();
            exdate.setDate(exdate.getDate()+expiredays);
            document.cookie=c_name+ "=" +escape(value)+ ((expiredays==null) ? "" : ";expires="+exdate.toGMTString());
            location.reload();
        }
    </script>
{% endblock %}